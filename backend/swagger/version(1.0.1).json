{
"openapi": "3.0.0",
  "info": {
    "title": "Basic API",
    "version": "1.0.1",
    "description": "A basic API that has toppings as a collection"
  },
"servers": [
  {
    "url": "http://localhost:4579",
    "description": "Localhost Server for testing the API"
  }
],
"paths": {
  "/toppings/getall": {
    "get": {
      "tags": [
        "toppings"
      ],
      "summary": "Get all toppings",
      "description": "Obtiene una lista con todos los toppings existentes",
      "parameters": [],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "no schema defined"
                },
                "example": {
                  "toppings": [
                      {
                        "_id": "1234",
                        "name": "carne",
                        "type": "Meat",
                        "available": true,
                        "imagen":"https://pixelartmaker-data-78746291193.nyc3.digitaloceanspaces.com/image/753ce060eea2ca1.png"
                      }
                  ]
                }
              }
            }
          }
        },
        "400": {
          "description": "NOT OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "no schema defined"
                },
                "example": {
                  "error": "Bad Request (could change)"
                }
              }
            }
          }
        }
      }
    }
  },
  "/toppings/create": {
    "post": {
      "tags": [
        "toppings"
      ],
      "summary": "Creates a topping",
      "description": "Crea un topping en la base de datos",
      "requestBody": { 
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/definitions/Topping"
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "toppings": {
                    "name": "carne",
                    "type": "Meat",
                    "available": true,
                    "imagen": "https://pixelartmaker-data-78746291193.nyc3.digitaloceanspaces.com/image/753ce060eea2ca1.png"
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "NOT OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "error": "Bad Request (could change)"
                }
              }
            }
          }
        }
      }
    }
  },
  "/toppings/delete/{_id}": {
    "delete": {
      "tags": [
        "toppings"
      ],
      "summary": "Deletes a topping",
      "description": "Elimina un topping de la base de datos",
      "parameters": [
        {
          "in": "path",
          "name": "_id",
          "required": true,
          "schema": {
            "type": "string",
            "description": "Id of the topping to delete"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                    "msg": "deleted"
                }
              }
            }
          }
        },
        "400": {
          "description": "NOT OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "error": "Bad Request (could change)"
                }
              }
            }
          }
        }
      }
    }
  },
  "/toppings/update/{_id}": {
    "patch": {
      "tags": [
        "toppings"
      ],
      "summary": "Updates a topping",
      "description": "Actualiza un topping de la base de datos",
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/definitions/Test"
            }
          }
        }
      },
      "parameters": [
        {
          "name": "_id",
          "in": "path",
          "required": true,
          "description": "Id of the topping to update",
          "schema": {
            "type": "string"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "msg": "updated"
                }
              }
            }
          }
        },
        "400": {
          "description": "NOT OK",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "error": "Bad Request (could change)"
                }
              }
            }
          }
        },
        "404": {
          "description": "NOT FOUND",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "example": {
                  "error": "Id Not Found"
                }
              }
            }
          }
        }
      }
    }
  }
},
"definitions": {
  "Topping": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "example": "carne"
      },
      "type": {
        "type": "string",
        "enum": ["Meat", "Vegetable"],
        "example": "Meat"
      },
      "available": {
        "type": "boolean",
        "example": true
      },
      "imagen": {
        "type": "string",
        "example": "https://pixelartmaker-data-78746291193.nyc3.digitaloceanspaces.com/image/753ce060eea2ca1.png"
      }
    }
  },
  "Test": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "example": "Test Topping"
      },
      "type": {
        "type": "string",
        "enum": ["Test"],
        "example": "Test"
      },
      "available": {
        "type": "boolean",
        "example": true
      },
      "imagen": {
        "type": "string",
        "example": "Test.png"
      }
    }
  }
}
}